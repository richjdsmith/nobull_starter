<h2 class="devise-title">Sign up</h2>
<p class="devise-subtitle">
  Already signed up? <%= render "devise/shared/links" %>
</p> 
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'layouts/notifications/error_messages', resource: resource %>
  <div class="field mb-4">
    <%= f.label :name, class: "label" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'text-input' %>
  </div>
  <div class="field">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-input' %>
  </div>

  <div class="field">
    <%= f.label :password, class: "label" %>
    <%# if @minimum_password_length %>
    <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
    <%# end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'text-input' %>
  </div>

  <div class="field">
    <%= f.label  :password_confirmation, 'Confirm Your Password',  class: "label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'text-input' %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-indigo w-full" %>
  </div>
<% end %>

<button class="text"></button>
  

