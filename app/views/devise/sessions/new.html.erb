<h2 class="devise-title">Log in</h2>
<p class="devise-subtitle">
  New to the app? <%= link_to "Sign up", new_registration_path(resource_name), class: 'shared-links' %>
</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render 'layouts/notifications/error_messages', resource: resource %>
  <div class="field">
    <%= f.label :email, class: 'label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'text-input' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'label' %>
    <%= f.password_field :password, autocomplete: "current-password", class:'text-input' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field check-field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'label' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-purple w-full mb-4'%>
  </div>
<% end %>

<div class="text-center w-full">
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'shared-links ' %>
</div>
