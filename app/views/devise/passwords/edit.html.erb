<h2 class="devise-title">Change your password</h2>
<p class="devise-subtitle">Remembered your password? <%= link_to "Log in", new_session_path(resource_name), class: 'shared-links' %></p>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'layouts/notifications/error_messages', object: resource %>
  <%= f.hidden_field :reset_password_token %>
  <div class="field">
    <%= f.label :password, "New password", class: 'label' %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'text-input' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password", class: 'label' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'text-input' %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: 'btn btn-purple w-full' %>
  </div>
<% end %>

