<h2 class="devise-title">Forgot your password?</h2>
<p class="devise-subtitle">Already know your password? <%= link_to "Log in", new_session_path(resource_name), class: 'shared-links' %></p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render 'layouts/notifications/error_messages', resource: resource %>
  <div class="field">
    <%= f.label :email, class: 'label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-input' %>
  </div>

  <div class="actions">
    <%= f.submit "Send Reset Email", class: 'btn btn-purple w-full mb-4' %>
  </div>
<% end %>
<p class="devise-subtitle">Or you can <%= link_to "Sign up", new_registration_path(resource_name), class: 'shared-links' %></p>

